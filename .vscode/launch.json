{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "(gdb) Launch with Input",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin/tp2.out",
        "args": ["<", "input.txt"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Compilar"
      }
    ]
  }
  